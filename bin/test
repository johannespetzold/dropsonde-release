#!/bin/bash -e 

BIN_DIR=`dirname $0`
source $BIN_DIR/setup

echo "Running go fmt..."
go fmt github.com/cloudfoundry-incubator/dropsonde/...

echo "Running go vet..."
go vet github.com/cloudfoundry-incubator/dropsonde/...

echo "Running ginkgo tests..."
ginkgo -race -r $RELEASE_DIR/src/hurricanehunter/src/hurricanehunter
ginkgo -race -r $RELEASE_DIR/src/hurricanehunter/src/github.com/cloudfoundry-incubator/dropsonde