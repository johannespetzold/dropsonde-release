#!/bin/bash -e 

BIN_DIR=$(dirname $0)
source $BIN_DIR/setup

PACKAGES="github.com/cloudfoundry-incubator/dropsonde hurricanehunter"

for package in $PACKAGES; do
  echo "Running go fmt/vet/ginkgo for $package"
  go fmt $package/...
  go vet $package/...
  ginkgo -race -r $RELEASE_DIR/src/hurricanehunter/src/$package
done
